{
  "name": "snapdrag",
  "version": "0.5.1",
  "description": "A simple, lightweight, and performant drag and drop library for React and vanilla JS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zheksoon/snapdrag.git"
  },
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/snapdrag.cjs",
  "umd:main": "./dist/snapdrag.umd.js",
  "module": "dist/snapdrag.module.js",
  "unpkg": "dist/snapdrag.umd.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/snapdrag.js",
      "require": "./dist/snapdrag.cjs",
      "umd": "./dist/snapdrag.umd.js",
      "browser": "./dist/snapdrag.module.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./react": {
      "import": "./react/dist/index.js",
      "require": "./react/dist/index.cjs",
      "umd": "./react/dist/index.umd.js",
      "browser": "./react/dist/index.module.cjs",
      "types": "./react/dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "yarn build:snapdrag && yarn build:react",
    "build:snapdrag": "microbundle --no-compress",
    "build:react": "cd react/ && microbundle --no-compress --jsx React.createElement --external 'snapdrag'",
    "start": "microbundle watch"
  },
  "devDependencies": {
    "microbundle": "^0.15.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "dist",
    "src",
    "react/dist",
    "react/src",
    "react/package.json",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "drag",
    "drop",
    "drag-and-drop",
    "draggable",
    "vanilla",
    "typescript",
    "react",
    "react-dnd"
  ],
  "author": {
    "name": "Eugene Daragan"
  },
  "license": "MIT"
}
